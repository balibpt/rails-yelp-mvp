<h1>
  Restaurants
</h1>
<%= link_to "Create New Restaurant", new_restaurant_path %>
<ol>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, "restaurants/#{restaurant.id}", :class => "text-decoration-none" %>
      (<i><%= restaurant.category.capitalize%></i>)
    </li>
  <% end %>
</ol>
